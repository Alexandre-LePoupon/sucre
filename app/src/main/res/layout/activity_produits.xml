<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <ImageButton
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:srcCompat="@drawable/mcdo_en_ce_moment"
                    android:id="@+id/imageButton"
                    android:padding="0dp"/>

                <ImageButton
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:srcCompat="@drawable/mcdo_nos_menus"
                    android:id="@+id/imageButton2"
                    android:padding="0dp"/>

                <ImageButton
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:srcCompat="@drawable/mcdo_nos_sandwichs"
                    android:id="@+id/imageButton1"
                    android:padding="0dp"/>

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/mcdo_petite_faim"
                    android:id="@+id/imageButton3"
                    android:layout_weight="1"
                    android:padding="0dp"/>

            </LinearLayout>
        </HorizontalScrollView>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="340dp"
            android:id="@+id/scrollView1">
            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:columnCount="2"
                android:layout_marginLeft="50dp">

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/mcdo_big_mac"
                    android:id="@+id/imageButton7"
                    android:padding="0dp"/>

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/mcdo_boite_20_chicken_mcnuggets"
                    android:id="@+id/imageButton6"
                    android:padding="0dp"/>

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/mcdo_cheeseburger"
                    android:id="@+id/imageButton5"
                    android:padding="0dp"/>

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/mcdo_chicken_mcnuggets"
                    android:id="@+id/imageButton8"
                    android:padding="0dp"/>

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/mcdo_croque_mcdo"
                    android:id="@+id/imageButton9"
                    android:padding="0dp"/>

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/mcdo_double_cheese"
                    android:id="@+id/imageButton10"
                    android:padding="0dp"/>

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/mcdo_hamburger"
                    android:id="@+id/imageButton11"
                    android:padding="0dp"/>
                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/mcdo_mcwrap_chevre"
                    android:id="@+id/imageButton12"
                    android:padding="0dp"/>

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/mcdo_mcwrap_poulet_crudites"
                    android:id="@+id/imageButton13"
                    android:padding="0dp"/>

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/mcdo_poisson_ranch"
                    android:id="@+id/imageButton14"
                    android:padding="0dp"/>

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/mcdo_royal_bacon"
                    android:id="@+id/imageButton15"
                    android:padding="0dp"/>

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/mcdo_triple_cheeseburger"
                    android:id="@+id/imageButton4"
                    android:padding="0dp"/>
            </GridLayout>
        </ScrollView>

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:columnCount="3"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="0dp"
            android:paddingTop="0dp"
            android:id="@+id/extendMenu">

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                app:srcCompat="@drawable/ic_keyboard_arrow_up_black_24dp"
                android:id="@+id/imageButton17"
                android:layout_column="0"
                android:layout_row="0"
                android:onClick="toggle_contents"/>

            <TextView
                android:text="Glucides lents : "
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView6"
                android:layout_column="0"
                android:layout_row="1"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1.5g"
                android:ems="10"
                android:id="@+id/textView8"
                android:layout_marginLeft="20dp"
                android:layout_column="2"
                android:layout_row="1"/>

            <TextView
                android:text="Glucides rapides :"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView5"
                android:layout_column="0"
                android:layout_row="2"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2.1g"
                android:ems="10"
                android:id="@+id/textView7"
                android:layout_marginLeft="20dp"
                android:layout_column="2"
                android:layout_row="2"/>

            <TextView
                android:id="@+id/txt_help_gest"
                android:text="UN ENORME TEST pour la vue qui monte avec les dÃ©tails"
                android:layout_column="0"
                android:layout_row="3"/>

        </GridLayout>

    </LinearLayout>

</LinearLayout>