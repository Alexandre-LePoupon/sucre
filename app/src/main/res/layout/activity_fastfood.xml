<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:weightSum="1"
    android:orientation="vertical">


    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="20dp"
        android:visibility="visible">

        <ImageButton
            android:id="@+id/imageButton8"
            android:layout_column="1"
            android:layout_row="1"
            android:padding="0dp"
            app:srcCompat="@drawable/fast_food_burger_king" />

        <ImageButton
            android:id="@+id/imageButton6"
            android:layout_column="2"
            android:layout_row="1"
            android:layout_marginBottom="25dp"
            android:padding="0dp"
            app:srcCompat="@drawable/fast_food_quick" />

        <ImageButton
            android:id="@+id/imageButton9"
            android:layout_column="1"
            android:layout_row="2"
            android:padding="0dp"
            app:srcCompat="@drawable/fast_food_speed_burger" />

        <ImageButton
            android:id="@+id/imageButton5"
            android:layout_column="1"
            android:layout_row="0"
            android:onClick="produits"
            android:padding="0dp"
            app:srcCompat="@drawable/fast_food_mcdo" />

        <ImageButton
            android:id="@+id/imageButton10"
            android:layout_column="2"
            android:layout_row="2"
            android:padding="0dp"
            app:srcCompat="@drawable/fast_food_vf" />

        <ImageButton
            android:id="@+id/imageButton7"
            android:layout_column="2"
            android:layout_marginBottom="25dp"
            android:layout_row="0"
            android:padding="0dp"
            app:srcCompat="@drawable/fast_food_kfc" />

    </GridLayout>

</LinearLayout>