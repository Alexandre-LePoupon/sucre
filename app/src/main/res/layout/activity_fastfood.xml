<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1"
    android:orientation="vertical"
    android:background="#fff">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ddf">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_weight="0"
                android:layout_height="match_parent"
                android:background="#ddf">

                <ImageButton
                    android:id="@+id/imageButton9"
                    android:padding="0dp"
                    app:srcCompat="@drawable/fast_food_speed_burger"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="#fff"
                    android:layout_marginTop="10dp"
                    android:layout_margin="5dp" />

                <ImageButton
                    android:id="@+id/imageButton5"
                    android:onClick="produits"
                    android:padding="0dp"
                    app:srcCompat="@drawable/fast_food_mcdo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="#fff"
                    android:layout_marginTop="10dp"
                    android:layout_margin="5dp" />

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#ddf">

                <ImageButton
                    android:id="@+id/imageButton8"
                    android:padding="0dp"
                    app:srcCompat="@drawable/fast_food_burger_king"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="#fff"
                    android:layout_marginTop="10dp"
                    android:layout_margin="5dp" />

                <ImageButton
                    android:id="@+id/imageButton6"
                    android:layout_marginBottom="10dp"
                    android:padding="0dp"
                    app:srcCompat="@drawable/fast_food_quick"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="#fff"
                    android:layout_marginTop="10dp"
                    android:layout_margin="5dp" />

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#ddf">

                <ImageButton
                    android:id="@+id/imageButton7"
                    android:layout_marginBottom="25dp"
                    android:padding="0dp"
                    app:srcCompat="@drawable/fast_food_kfc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="#fff"
                    android:layout_margin="5dp" />

                <ImageButton
                    android:id="@+id/imageButton10"
                    android:padding="0dp"
                    app:srcCompat="@drawable/fast_food_vf"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="#fff"
                    android:layout_margin="5dp" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>